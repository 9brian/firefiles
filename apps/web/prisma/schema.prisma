generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id           String           @id @unique @default(uuid())
  lastSignedIn DateTime         @map("last_signed_in")
  createdAt    DateTime         @default(now()) @map("created_at")
  email        String           @unique
  verified     Boolean          @default(false)
  plan         PricingPlan      @default(FREE)
  drives       BucketsOnUsers[]
  invitations  Invitation[]
}

model Drive {
  id        String           @id @unique @default(uuid())
  createdAt DateTime         @default(now()) @map("created_at")
  name      String
  keys      String           @db.LongText
  type      String
  users    BucketsOnUsers[]
}

model BucketsOnUsers {
  id        String   @id @unique @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  bucket    Drive    @relation(fields: [bucketId], references: [id])
  bucketId  String
  createdAt DateTime @default(now()) @map("created_at")
  isPending Boolean  @default(true) @map("is_pending")
  role      Role     @default(VIEWER)
  invitation Invitation?

  @@index([userId])
  @@index([bucketId])
}

model Invitation {
  user          User           @relation(fields: [userId], references: [id])
  userId        String
  bucketOnUser  BucketsOnUsers @relation(fields: [invitationId], references: [id])
  invitationId  String         @unique

  @@id([userId, invitationId])
  @@index([userId])
  @@index([invitationId])
}

enum Role {
  CREATOR
  ADMIN
  VIEWER
  EDITOR
}

enum PricingPlan {
  FREE
  PERSONAL
  PREMIUM
  TEAM
}
